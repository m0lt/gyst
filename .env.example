# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/[your-project-id]/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-anon-key

# Supabase Admin (for migrations and admin operations)
# WARNING: Never expose this key in client-side code!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase Database URL (for running migrations with psql)
# Format: postgresql://postgres.[ref]:[password]@[host]:5432/postgres
# Get from: https://supabase.com/dashboard/project/[your-project-id]/settings/database
SUPABASE_DB_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application URL (used for PWA manifest, redirects, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment: development, staging, production
NEXT_PUBLIC_APP_ENV=development

# App Name (displayed in PWA)
NEXT_PUBLIC_APP_NAME=Gyst

# App Description
NEXT_PUBLIC_APP_DESCRIPTION=Beautiful habit tracking with Art Nouveau design

# =============================================================================
# INTERNATIONALIZATION (i18n)
# =============================================================================
# Default language (en or de)
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Available languages (comma-separated)
NEXT_PUBLIC_AVAILABLE_LOCALES=en,de

# =============================================================================
# PWA CONFIGURATION
# =============================================================================
# Theme color (used in manifest.json and meta tags)
# Default: #8B4789 (Mucha mauve)
NEXT_PUBLIC_THEME_COLOR=#8B4789

# Background color for PWA splash screen
NEXT_PUBLIC_BACKGROUND_COLOR=#FAF8F5

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable analytics (set to 'true' when ready)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable service worker for offline mode
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true

# Enable push notifications (future feature)
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

# =============================================================================
# AI / OPENAI CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
# Used for AI-powered task suggestions and personalization
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# EMAIL / NOTIFICATIONS CONFIGURATION
# =============================================================================
# Resend API Key - Get from: https://resend.com/api-keys
# Used for transactional emails (task reminders, weekly digest, etc.)
RESEND_API_KEY=re_your_api_key_here

# Email sender address (must be verified in Resend)
# Format: "Your App Name <noreply@yourdomain.com>"
RESEND_FROM_EMAIL=Gyst <noreply@gyst.app>

# Enable email notifications (set to 'true' in production)
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=false

# Default daily email limit per user (prevents spam)
EMAIL_DAILY_LIMIT_PER_USER=10

# =============================================================================
# WEB PUSH NOTIFICATIONS
# =============================================================================
# VAPID keys for Web Push (generate with: npx web-push generate-vapid-keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# =============================================================================
# CRON JOBS
# =============================================================================
# Secret for authenticating cron job requests (generate a random string)
# Used to secure the weekly digest cron endpoint
CRON_SECRET=your-random-secret-string-here

# =============================================================================
# CALENDAR INTEGRATION (Optional - Phase 4.1)
# =============================================================================
# Google Calendar OAuth - Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft 365 OAuth - Get from: https://portal.azure.com/
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common

# OAuth redirect URI (must match your OAuth app configuration)
OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/callback

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Show debug info in console (development only)
NEXT_PUBLIC_DEBUG=false

# Enable React Query Devtools
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=false
